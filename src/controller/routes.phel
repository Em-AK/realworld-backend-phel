(ns realworld\controller\routes
  (:require realworld\view\main :refer [index-html])
  (:require realworld\module\greet :as g)
  (:require phel\http :as h))

(defn index-handler [req]
  (h/response-from-map {:status 200
                        :body index-html}))

(defn ping-handler [req]
  (h/response-from-map {:status 200
                        :body (g/greet (str "pong - " (rand)))}))
